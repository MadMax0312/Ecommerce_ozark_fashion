<header class="site-navbar" role="banner">
    <div class="container">
        <div class="row align-items-center py-3">
            <div class="col-7 col-md-3 order-1">
                <div class="site-logo">
                    <a href="/" class="js-logo-clone" style="font-size: 24px; width: 150px;">O Z A R K</a>
                </div>
            </div>
            <div class="col-12 col-md-6 order-3 order-md-2 text-center">
                <nav class="site-navigation text-center" role="navigation">
                    <ul class="site-menu">
                        <li><a href="/" style="font-size: 18px;">Home</a></li>
                        <li><a href="/shop" style="font-size: 18px;">Shop</a></li>
                        <li><a href="/about" style="font-size: 18px;">About</a></li>
                        <li><a href="/contact" style="font-size: 18px;">Contact</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-5 col-md-3 order-2 order-md-3 text-right">
                <div class="site-top-icons">
                    <ul>
                        <% if (user) { %>
                            <li class="ml-2"><a href="/logout" class="btn btn-sm" style="border-width: 1px; border-color: #000;">Logout</a></li>
                        <% } else { %>
                            <li class="ml-2"><a href="/login" class="btn btn-sm" style="border-width: 1px; border-color: #000;">Login</a></li>
                        <% } %>
                        <li><a href="/userProfile" style="font-size: 18px;"><span class="icon icon-person"></span></a></li>
                        <li><a href="/wishlist" style="font-size: 18px;"><span class="icon icon-heart-o"></span></a></li>
                        <li>
                            <a href="/cart" class="site-cart" style="font-size: 18px;">
                                <span class="icon icon-shopping_cart"></span>
                                <% if (user) { %>
                                    <span class="count" style="font-size: 14px;"> <%= count %>  </span>
                                <% } else { %>
                                    
                                <% } %>
                                
                            </a>
                        </li>
                        <li class="d-inline-block d-md-none ml-md-0">
                            <a href="#" class="site-menu-toggle js-menu-toggle" style="font-size: 18px;"><span class="icon-menu"></span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
