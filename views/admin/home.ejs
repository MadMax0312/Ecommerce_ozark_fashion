<script>
    document.addEventListener('DOMContentLoaded', function () {
        const count1 = parseInt(`<%= order.razorRevenue || 0 %>`)
        const count2 = parseInt(`<%= order.walletRevenue || 0 %>`)
        const count3 = parseInt(`<%= order.cashOnDeliveryRevenue || 0 %>`)
      const revenueData = [
        {
          label: 'Razor Revenue',
          amount: count1,
          color: '#007bff',
        },
        {
          label: 'Wallet Revenue',
          amount: count2,
          color: '#28a745',
        },
        {
          label: 'Cash on Delivery Revenue',
          amount: count3,
          color: '#ffc107',
        },
      ];
  
      var ctx = document.getElementById('revenuePieChart').getContext('2d');
      var revenuePieChart = new Chart(ctx, {
        type: 'pie',
        data: {
          labels: revenueData.map(revenue => revenue.label),
          datasets: [
            {
              data: revenueData.map(revenue => revenue.amount),
              backgroundColor: revenueData.map(revenue => revenue.color),
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: false, // Set to false to make the chart fit its container
        },
      });
    });
  </script>


