<%- include('../adminLayouts/header.ejs') %>
<%- include('../adminLayouts/sidebar.ejs') %>
<%- include('../adminLayouts/navbar.ejs') %>

<style>
     .table th, .table td {
        white-space: nowrap;
        color: white;
    }
    .table thead th{
      color: orange;
      font-size: larger;
    }

</style>

<div class="main-panel">
  <div class="content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 grid-margin">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title text-center mb-4">Sales Report</h2>

              <div class="text-right mb-3">
                <!-- Form for selecting filter option -->
                <form action="/admin/export-sales" method="get" class="d-inline">
                  <label for="filter">Filter:</label>
                  <select name="filter" id="filter" class="mr-2" style="width: 100px;">
                    <option value="daily">Daily</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                  </select>
                  <button type="submit" class="btn btn-primary">Export to CSV</button>
                </form>
              </div>
       

              <!-- Table content -->
              <div class="table-responsive">
                <table class="table table-bordered">
                  <!-- Table header -->
                  <thead>
                    <tr>
                      <th style="font-weight: 500;">No.</th>
                      <th>Order Id</th>
                      <th>Order Date</th>
                      <th>Amount</th>
                      <th>Payment</th>
                      <th>Status</th>
                      <th>Order Status</th>
                    </tr>
                  </thead>
                  <!-- Table body -->
                  <tbody>
                    <% if (orders.length > 0) { %> 
                      <% for (let i = 0; i < orders.length; i++) { %>
                        <tr>
                          <td><%= i + 1 %></td>
                          <td><%= orders[i].orderTrackId %></td>
                          <td><%= orders[i].createdAt.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') %></td>
                          <td>â‚¹ <%= orders[i].totalAmount %></td>
                          <td><%= orders[i].paymentMethod %></td>
                          <td><%= orders[i].paymentStatus %></td>
                          <td><%= orders[i].products[0].status %></td>
                        </tr>
                      <% } %> 
                    <% } else { %>
                      <tr>
                        <td colspan="6" class="text-center">
                          <div class="error-content text-center">
                            <h1 class="error-title">No Orders</h1>
                            <p>You have not placed any orders yet.</p>
                            <a href="/products" class="btn btn-outline-primary btn-lg">
                              <span>SHOPPING</span>
                              <i class="icon-long-arrow-right"></i>
                            </a>
                          </div>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../adminLayouts/footer.ejs') %>
