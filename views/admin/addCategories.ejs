<!--============================ Adding categories table=============== -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add Category</h4>
                    <form class="forms-sample" action="" method="post" onsubmit="return validForm()">
                        <% if(typeof message !== 'undefined'){ %>
                        <h6 id="invalid-msg" class="text-danger text-center"><%- message %></h6>
                        <% } %>

                        <div class="form-group">
                            <label for="exampleInputName1">Category Name</label>
                            <input
                                type="text"
                                class="form-control"
                                id="exampleInputName1"
                                name="categoryname"
                                placeholder=" Category Name"
                            />
                            <p id="categoryname-error" class="error-message" style="color: red"></p>
                        </div>

                        <div class="form-group">
                            <label for="exampleTextarea1">Category Description</label>
                            <textarea
                                class="form-control"
                                id="exampleTextarea1"
                                rows="4"
                                name="categorydes"
                                placeholder="Category Description"
                            ></textarea>
                            <p id="categorydes-error" class="error-message" style="color: red"></p>
                        </div>

                        <!-- Offer-related fields -->
                        <div class="form-group">
                            <label for="offerName">Offer Name</label>
                            <input
                                type="text"
                                class="form-control"
                                id="offerName"
                                name="offerName"
                                placeholder="Offer Name"
                            />
                            <p id="offerName-error" class="error-message" style="color: red"></p>
                        </div>

                        <div class="form-group">
                            <label for="offerStartDate">Offer Start Date</label>
                            <input type="date" class="form-control" id="offerStartDate" name="offerStartDate" />
                            <p id="offerStartDate-error" class="error-message" style="color: red"></p>
                        </div>

                        <div class="form-group">
                            <label for="offerEndDate">Offer End Date</label>
                            <input type="date" class="form-control" id="offerEndDate" name="offerEndDate" />
                            <p id="offerEndDate-error" class="error-message" style="color: red"></p>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../adminLayouts/footer.ejs') %>
