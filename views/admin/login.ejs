<%- include('../layouts/header.ejs') %>

<div class="container" style="margin-top: 100px;">

  <% if(typeof message !== 'undefined'){ %>

    <h6 id="invalid-msg" class="text-danger text-center"><%- message %></h6>

    <% } %>

  <h2 class="mb-4 text-center"><strong>Admin Login</strong></h2>
  <form action="" method="post" onsubmit="return valiForm()">
    <div class="form-group">
      <input type="email" class="form-control" name="email" placeholder="Enter email" id="email">
      <p id="email-error" class="error-message" style="color: red;"></p>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="password" placeholder="Enter password" id="password">
      <p id="password-error" class="error-message" style="color: red;"></p>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Login</button>
    <div class="mt-3 text-center">
      <a href="" style="text-decoration: underline;color: red;">Forgot Password</a>
    </div>
  </form>
  
</div>

<%- include('../layouts/footer.ejs') %>
