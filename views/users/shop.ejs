<%- include('../userLayouts/header.ejs') %> 
<%- include('../userLayouts/navbar.ejs') %>

<style>
    .product-card {
        border: none;
        transition: box-shadow 0.3s ease;
    }

    .product-card:hover {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    }

    .product-image {
        height: 200px;
        object-fit: cover;
    }

    .category {
        color: #777;
    }

    .description {
        color: #444;
    }
</style>

<script>
    function calculateDiscountedPrice(originalPrice, discountPercentage) {
        const discountAmount = (originalPrice * discountPercentage) / 100;
        return (originalPrice - discountAmount).toFixed(2);
    }
</script>

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Shop</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section" style="padding-top: 20px">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-9 order-2">
                <div class="d-flex justify-content-end mb-3">
                    <form class="form-inline">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-sm" name="search" placeholder="Search" />
                            <div class="input-group-append">
                                <button class="btn btn-primary btn-sm" type="submit">Search</button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="row">
                    <% if (Product.length > 0) { 
                        for (let i = 0; i < Product.length; i++) { %>
                            <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                                <div class="card product-card">
                                    <div class="product-image-wrapper">
                                        <a href="/product-info?id=<%= Product[i]._id %>">
                                            <img src="/static/admin/Assets/images/products/<%= Product[i].image[0] %>" alt="Product Image" class="card-img-top product-image" />
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a href="#" style="color: black"><%= Product[i].productname %></a>
                                        </h5>
                                        <p class="card-text category"><%= Product[i].category.categoryname %></p>
                                        <p class="card-text description"><%= Product[i].description %></p>
                                        <% if (Product[i].discount && parseFloat(Product[i].discount) > 0) { %>
                                            <p class="card-text price text-black font-weight-bold">
                                                Actual Price: ₹<%= Product[i].price %><br>
                                                Discounted Price: ₹<%= calculateDiscountedPrice(Product[i].price, Product[i].discount) %>
                                            </p>
                                        <% } else { %>
                                            <p class="card-text price text-black font-weight-bold">₹<%= Product[i].price %></p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                    <% } } else { %>
                        <div class="col-12">
                            <p class="text-center">No products available.</p>
                        </div>
                    <% } %>
                </div>

                <% if (typeof totalPages !== 'undefined') { %>
                    <div class="pagination-container">
                        <% if (currentPage > 1) { %>
                            <a href="?page=<%= currentPage - 1 %>"><i class="fas fa-chevron-left"></i> Previous</a>
                        <% } %> 
                        <% for(let j=1; j <= totalPages; j++){ %>
                            <a href="?page=<%= j %>" class="<%= j === currentPage ? 'active' : '' %>"><%= j %></a>
                        <% } %> 
                        <% if (currentPage < totalPages) { %>
                            <a href="?page=<%= currentPage + 1 %>">Next <i class="fas fa-chevron-right"></i></a>
                        <% } %>
                    </div>
                <% } %>
            </div>

            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Categories</h3>
                    <!-- Replace the href values with your actual category links -->
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <a href="/shop?category=category1" class="d-flex"><span>Category 1</span> <span class="text-black ml-auto">(2,220)</span></a>
                        </li>
                        <li class="mb-1">
                            <a href="/shop?category=category2" class="d-flex"><span>Category 2</span> <span class="text-black ml-auto">(2,550)</span></a>
                        </li>
                        <!-- Add more categories as needed -->
                    </ul>
                </div>

                <div class="border p-4 rounded mb-4">
                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Filter by Price</h3>
                        <div id="slider-range" class="border-primary"></div>
                        <input
                            type="text"
                            name="text"
                            id="amount"
                            class="form-control border-0 pl-0 bg-white"
                            disabled=""
                        />
                    </div>

                    <!-- Your existing code for Size and Color filters goes here -->
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../userLayouts/footer.ejs') %>


