<%- include('../userLayouts/header.ejs') %> <%- include('../userLayouts/navbar.ejs') %>

<link rel="stylesheet" href="/static/userAssets/css/profile.css" />

<main class="main">
    <div class="page-header text-center m-t-85" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Orders</h1>
        </div>
    </div>
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>

                <li class="breadcrumb-item active" aria-current="page">Orders</li>
            </ol>
        </div>
    </nav>

    <div class="page-content">
        <div class="cart">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-cart table-mobile">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Order Date</th>
                                    <th>Amount</th>
                                    <th>Payment</th>
                                    <th>Expected Delivery</th>
                                    <th>Tracking Number</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (orders.length > 0) { %> <% for (let i = 0; i < orders.length; i++) { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td>
                                        <%= orders[i].createdAt.toLocaleDateString('en-US', { year: 'numeric', month:
                                        'short', day: '2-digit' }).replace(/\//g, '-') %>
                                    </td>
                                    <td>â‚¹ <%= orders[i].totalAmount %></td>
                                    <td><%= orders[i].paymentMethod %></td>

                             

                                    <td><%= orders[i].formattedDeliveryDate %></td>
                                    <td>okkk</td>
                                    <td>
                                        <a href="/orderDetails?id=<%= orders[i]._id %>" class="btn-outline-dark btn-round"
                                            >View Details</a
                                        >
                                    </td>
                                </tr>
                                <% } %> <% } else { %>
                                <tr>
                                    <td colspan="7">
                                        <div class="error-content text-center">
                                            <div class="container">
                                                <h1 class="error-title">No Orders</h1>
                                                <p>You have not placed any orders yet.</p>
                                                <a href="/products" class="btn btn-outline-primary-2 btn-minwidth-lg">
                                                    <span>SHOPPING</span>
                                                    <i class="icon-long-arrow-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- End .main -->

<%- include('../userLayouts/footer.ejs') %>
