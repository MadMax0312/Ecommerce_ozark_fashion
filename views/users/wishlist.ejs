<%- include('../userLayouts/header.ejs') %> <%- include('../userLayouts/navbar.ejs') %>

<div class="site-wrap">
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0">
                    <a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Wishlist</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-12 order-2">
                    <div class="row">
                        <% if (data.length > 0) { for (let i = 0; i < data.length; i++) { const products = data[i].product;
                        %>
                        <!-- Loop through products in the wishlist -->
                        <% products.forEach(product => { %>
                        <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                            <div class="block-4 text-center border">
                                <figure class="block-4-image">
                                    <a href="/product-info?id=<%= product._id %>">
                                        <img
                                            src="/static/admin/Assets/images/products/<%= product.image?.[0] %>"
                                            alt="Product Image"
                                            class="img-fluid"
                                        />
                                    </a>
                                </figure>
                                <div class="block-4-text p-4" style="height: 200px">
                                    <h3><a href="#" style="color: gray"><%= product.productname %></a></h3>
                                    <p class="text-black font-weight-semibold"><%= product.description %></p>
                                    <p class="text-black font-weight-semibold" style="margin: 0">â‚¹<%= product.price %></p>
                                    <p style="margin: 0">

                                        <a
                                        href="#"
                                        class="addToCartBtn buy-now btn btn-sm"
                                        id="hot"
                                        style="background-color: white; color: blue; padding-bottom: 0"
                                        data-product-id="<%= product._id %>"
                                    >
                                        Add To Cart
                                    </a>


                                    </p>
                                    <p style="margin: 0; height: 35px">
                                        <a
                                            href="/remove-wishlist?wishlistId=<%= data[i]._id %>&productId=<%= data[i].product[0]._id %>"
                                            class="buy-now btn btn-sm"
                                            style="background-color: white; color: red; height: 35px; border: none"
                                        >
                                            Remove
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% }); %> <% } } else { %>
                        <div class="col-12">
                            <p class="text-center">No products available.</p>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        document.body.addEventListener("click", async (event) => {
            if (event.target.matches(".addToCartBtn")) {
                const productId = event.target.getAttribute("data-product-id");
                const quantity = 1; // Set the quantity to the desired value

                try {
                    const response = await fetch("/addToCart", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({ id: productId, quantity: quantity }),
                    });

                    const data = await response.json();

                    if (response.ok) {
                        // Show success message as an alert
                        alert(data.message);
                    } else {
                        // Show error message as an alert
                        alert(data.message || "An error occurred while adding the product to the cart.");
                    }
                } catch (error) {
                    // Show error message as an alert
                    alert("An error occurred while adding the product to the cart.");
                    console.error("There was a problem with the fetch operation:", error);
                }
            }
        });
    </script>

