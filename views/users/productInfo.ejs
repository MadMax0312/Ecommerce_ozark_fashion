<script>

var clicked = true;

document.body.addEventListener("click", async (event) => {
    if (event.target.matches(".addToWishlistBtn")) {
        const productId = event.target.getAttribute('data-product-id');
        const messageElement = document.getElementById("wishlistMessage");

        try {
            const response = await fetch("/addToWishlist?id=" + productId, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({ id: productId }),
            });

            const data = await response.json();

            if (response.ok) {
                // If the response contains a 'message' property, display it in the div
                messageElement.textContent = data.message;
                messageElement.className = "alert alert-success"; // Use appropriate class for styling
            } else {
                // Handle the case when there is no message in the response
                messageElement.textContent = data.error || "An error occurred while adding the product to the wishlist.";
                messageElement.className = "alert alert-danger";
            }

            setTimeout(() => {
                messageElement.remove();
            }, 3000);

            // Refresh the page content after successful wishlist update (optional)
            if (response.ok) {
                // You can reload the page or update the UI based on your requirements
                // For example, you can update the wishlist count or any other relevant information.
                // window.location.reload();
            }

        } catch (error) {
            messageElement.textContent = "An error occurred while adding the product to the wishlist.";
            messageElement.className = "alert alert-danger";
            setTimeout(() => {
                messageElement.remove();
            }, 3000);
            console.error("There was a problem with the fetch operation:", error);
        }
    }
});




